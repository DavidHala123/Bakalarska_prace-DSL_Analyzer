<Window x:Class="ssh_test1.OptionsBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ssh_test1"
        mc:Ignorable="d"
        Title="OptionsBase" Height="300" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="0,5" Background="WhiteSmoke">
            <Button x:Name="WinAppe" Content="Window Appearence" BorderThickness="0" Background="WhiteSmoke" Margin="0,0,0,3"/>
            <Button x:Name="CharAppe" Content="Chart Appearence" Click="CharAppe_Click" BorderThickness="0" Background="WhiteSmoke" Margin="0,0,0,3"/>
            <Button x:Name="SelChart" Content="Select Charts" Click="SelChart_Click" BorderThickness="0" Background="WhiteSmoke" Margin="0,0,0,3"/>
            <Button x:Name="Con" Content="Connection" BorderThickness="0" Background="WhiteSmoke" Margin="0,0,0,3"/>
        </StackPanel>
        <Grid Grid.Column="1" x:Name="optCont"/>
    </Grid>
</Window>
